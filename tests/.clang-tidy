InheritParentConfig: true

# Since tests are written to be readable and simple, 
# they often break some of the rules, so disable affected checks to get rid of unnecessary warnings
Checks:
  # Allow initialization of test data with numeric literals
  - -cppcoreguidelines-avoid-magic-numbers
  - -readability-magic-numbers
  
  # Allow the use of const data members inside test fixtures
  # Copying fixtures is rarely needed and const can sometimes protect against incorrect use
  - -cppcoreguidelines-avoid-const-or-ref-data-members
  
  # Allow protected data members inside test fixtures
  - -cppcoreguidelines-non-private-member-variables-in-classes
  - -misc-non-private-member-variables-in-classes

  # Ignore warnings generated by the test framework
  - -cppcoreguidelines-avoid-c-arrays
  - -cppcoreguidelines-avoid-do-while
  - -cppcoreguidelines-avoid-non-const-global-variables
  - -modernize-avoid-c-arrays
  - -readability-function-cognitive-complexity
